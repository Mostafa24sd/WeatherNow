<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="forecast"
            type="com.mostafasadati.weathernow.model.ForecastList" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/forecast_item_layout_width"
        android:layout_height="@dimen/forecast_item_layout_height"
        android:layout_marginStart="@dimen/normal_padding"
        android:layoutDirection="ltr"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="1dp"
        android:layout_marginLeft="@dimen/normal_padding">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                setTopBg="@{forecast.weather.get(0).icon}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:background="@drawable/background_night" />

            <LinearLayout
                android:id="@+id/item_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/normal_padding"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tinyDateTxt"
                        setDayText="@{forecast.dt_txt}"
                        setTextColor="@{forecast.weather.get(0).icon}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/forecast_item_txt"
                        android:layout_alignParentLeft="true" />

                    <TextView
                        android:id="@+id/tinyTimeTxt"
                        setTextColor="@{forecast.weather.get(0).icon}"
                        setTimeText="@{forecast.dt_txt}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/forecast_item_txt"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>

                <com.airbnb.lottie.LottieAnimationView
                    setAnim="@{forecast.weather.get(0).icon}"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forecast_item_anim_size"
                    android:layout_gravity="center"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true" />

                <TextView
                    android:id="@+id/tinyDecsTxt"
                    setTextColor="@{forecast.weather.get(0).icon}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normal_padding"
                    android:text="@{forecast.weather.get(0).description}"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/forecast_item_txt"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/tinyTempTxt"
                    setTempTxt="@{forecast.main.temp}"
                    setTextColor="@{forecast.weather.get(0).icon}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/normal_padding"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/forecast_item_txt"
                    android:gravity="center_horizontal" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>

