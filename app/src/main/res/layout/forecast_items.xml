<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <data>

        <variable
            name="forecast"
            type="com.mostafasadati.weathernow.model.ForecastList" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginStart="5dp"
        android:layoutDirection="ltr"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                setTopBg="@{forecast.weather.get(0).icon}"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/item_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tinyDateTxt"
                        setDayText="@{forecast.dt_txt}"
                        setTextColor="@{forecast.weather.get(0).icon}"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="start"
                        android:paddingStart="5dp"
                        android:paddingTop="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:id="@+id/tinyTimeTxt"
                        setTextColor="@{forecast.weather.get(0).icon}"
                        setTimeText="@{forecast.dt_txt}"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:paddingTop="5dp"
                        android:paddingEnd="5dp"
                        android:textAlignment="textEnd"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_10ssp" />
                </LinearLayout>

                <com.airbnb.lottie.LottieAnimationView
                    setAnim="@{forecast.weather.get(0).icon}"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_gravity="center"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    android:layout_width="match_parent" />

                <TextView
                    android:id="@+id/tinyDecsTxt"
                    setTextColor="@{forecast.weather.get(0).icon}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@{forecast.weather.get(0).main}"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/tinyTempTxt"
                    setTempTxt="@{forecast.main.temp}"
                    setTextColor="@{forecast.weather.get(0).icon}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>

