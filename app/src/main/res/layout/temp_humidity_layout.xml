<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="currentWeather"
            type="com.mostafasadati.weathernow.model.CurrentWeather" />
    </data>

    <LinearLayout
        android:id="@+id/temp_humidity_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/temp_humidity_layout_size">

        <include
            layout="@layout/temp_layout"
            android:layout_width="0dp"
            bind:currentWeather="@{currentWeather}"
            android:layout_height="@dimen/temp_humidity_layout_size"
            android:layout_weight="0.5">

        </include>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/temp_humidity_layout_size"
            android:layout_weight="0.5">

            <ImageView
                setHumidityBg="@{currentWeather.main.humidity}"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/humidLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <ImageView
                    android:id="@+id/humidIMG"
                    setHumidityMeter="@{currentWeather.main.humidity}"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    tools:src="@drawable/w10"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/humidity"
                        android:textAlignment="center"
                        android:textSize="@dimen/title_txt" />

                    <TextView
                        android:id="@+id/humidTxt"
                        setHumidityTxt="@{currentWeather.main.humidity}"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/normal_padding"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:textSize="@dimen/big_txt" />

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>