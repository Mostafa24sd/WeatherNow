<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="city"
            type="com.mostafasadati.weathernow.model.SearchCity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/gps_item_size"
            android:layout_margin="2dp"
            app:cardBackgroundColor="#EBF1EA"
            app:cardCornerRadius="20dp"
            app:cardElevation="1dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/search_city_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/search_item_margin"
                    android:layout_marginLeft="@dimen/search_item_margin"
                    android:layout_marginTop="@dimen/normal_padding"
                    android:fontFamily="@font/far_two_light"
                    android:text="@{city.name}"
                    android:textSize="@dimen/search_item_city_txt_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Tehran" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/search_item_margin"
                    android:layout_marginLeft="@dimen/search_item_margin"
                    android:fontFamily="@font/far_two_light"
                    android:text="@{city.country}"
                    android:textSize="@dimen/search_item_country_txt_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/search_city_txt"
                    tools:text="Iran" />

                <ImageView
                    setFlagImg="@{city.country}"
                    android:layout_width="@dimen/search_item_flag"
                    android:layout_height="@dimen/search_item_flag"
                    android:layout_marginEnd="@dimen/search_item_margin"
                    android:layout_marginRight="@dimen/search_item_margin"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>